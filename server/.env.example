# MongoDB Connection
# Get your URI from MongoDB Atlas: https://www.mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
mongodb_db_name=job_tracker_db

# JWT Settings
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=1440

# Email Settings (optional - for password reset emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
